<scene>
  <scene.settings>
    <enviroment>
      <gravity>0,0,0</gravity>
    </enviroment>
  </scene.settings>
  <scene.assets>
    <mesh name="cube_mesh" src="cube.obj"></mesh>
    <mesh name="mug_mesh" src="Mug.obj"></mesh>
    <mesh name="table_mesh" src="table.obj"></mesh>
  </scene.assets>
  <scene.content>
